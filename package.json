{
  "name": "mbc-department-management",
  "version": "2.0.0",
  "description": "Modern TypeScript-based MBC Department Management System",
  "private": true,
  "type": "module",
  "workspaces": [
    "mbc-backend",
    "mbc-frontend",
    "ai-service"
  ],
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:ai\"",
    "dev:backend": "npm run dev --workspace=mbc-backend",
    "dev:frontend": "npm run dev --workspace=mbc-frontend",
    "dev:ai": "npm run dev --workspace=ai-service",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=mbc-backend",
    "build:frontend": "npm run build --workspace=mbc-frontend",
    "test": "npm run test --workspaces",
    "test:backend": "npm run test --workspace=mbc-backend",
    "test:frontend": "npm run test --workspace=mbc-frontend",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "setup": "npm install && npm run setup:env && npm run docker:up",
    "setup:env": "node scripts/setup-env.js",
    "migrate": "npm run migrate --workspace=mbc-backend",
    "seed": "npm run seed --workspace=mbc-backend"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "typescript",
    "react",
    "express",
    "postgresql",
    "redis",
    "supabase",
    "department-management",
    "academic-system"
  ],
  "author": "MBC Development Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.5",
    "form-data": "^4.0.5"
  }
}
