{
  "name": "mbc-backend",
  "version": "2.0.0",
  "description": "Modern TypeScript Backend for MBC Department Management",
  "type": "commonjs",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "concurrently \"tsc --watch\" \"tsc-alias --watch\"",
    "start": "node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "concurrently \"npm run build:watch\" \"nodemon dist/index.js\"",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "migrate": "npx prisma migrate dev",
    "migrate:prod": "npx prisma migrate deploy",
    "migrate:reset": "npx prisma migrate reset",
    "migrate:data": "tsx src/scripts/migrate-data.ts",
    "migrate:data:dry": "tsx src/scripts/migrate-data.ts --dry-run",
    "migrate:verify": "tsx src/scripts/migrate-data.ts verify",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "seed": "tsx src/utils/seeder.ts",
    "seed:destroy": "tsx src/utils/seeder.ts --destroy"
  },
  "keywords": [
    "MBC",
    "NIT-Bhopal",
    "Department-Management"
  ],
  "author": "Your Name <your.email@nitb.ac.in>",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@supabase/supabase-js": "^2.38.0",
